<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".BaseActivity" >

        <TextView
            android:id="@+id/activity_share_post_judul_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Judul" />

        <EditText
            android:id="@+id/activity_share_post_judul_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:id="@+id/activity_share_post_budget_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Budget" />

        <EditText
            android:id="@+id/activity_share_post_budget_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/activity_share_post_dimensi_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dimensi" />

        <EditText
            android:id="@+id/activity_share_post_dimensi_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:id="@+id/activity_share_post_manfaat_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manfaat" />

        <EditText
            android:id="@+id/activity_share_post_manfaat_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:id="@+id/activity_share_post_isi_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi" />

        <EditText
            android:id="@+id/activity_share_post_isi_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/activity_share_post_sisipGambarButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sisipkan Gambar" />

        <ImageView
            android:id="@+id/activity_share_post_image_preview_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:visibility="gone"/>

        <Spinner
            android:id="@+id/activity_share_post_propinsiSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Spinner
            android:id="@+id/activity_share_post_kabupatenSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        <Spinner
            android:id="@+id/activity_share_post_kecamatanSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        <Spinner
            android:id="@+id/activity_share_post_subproject_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
             />

        <CheckBox
            android:id="@+id/activity_share_post_saraCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tidak Mengandung SARA" />

        <CheckBox
            android:id="@+id/activity_share_post_responsibleCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bertanggung jawab atas isi berita" />
    </LinearLayout>

</ScrollView>