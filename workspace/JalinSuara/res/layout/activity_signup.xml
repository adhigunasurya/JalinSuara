<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".auth.SignUpActivity" >

    <TextView
        android:id="@+id/textCompleteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="27dp"
        android:paddingRight="17dp"
        android:text="Nama Lengkap" />

    <EditText
        android:id="@+id/editNewEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textNewEmail"
        android:layout_below="@+id/textNewEmail"
        android:ems="10"
        android:paddingRight="17dp" />

    <EditText
        android:id="@+id/editTextCompleteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textCompleteName"
        android:layout_below="@+id/textCompleteName"
        android:ems="10"
        android:paddingRight="17dp" />

    <TextView
        android:id="@+id/textNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editNewEmail"
        android:layout_below="@+id/editNewEmail"
        android:layout_marginTop="24dp"
        android:paddingRight="17dp"
        android:text="Kata Sandi" />

    <EditText
        android:id="@+id/editNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textNewPassword"
        android:layout_below="@+id/textNewPassword"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingRight="17dp" >
    </EditText>

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editNewPassword"
        android:layout_alignRight="@+id/editNewPassword"
        android:layout_below="@+id/editNewPassword"
        android:layout_marginTop="32dp"
        android:paddingRight="17dp"
        android:text="Daftar Akun Baru" />

    <TextView
        android:id="@+id/textNewEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextCompleteName"
        android:layout_below="@+id/editTextCompleteName"
        android:layout_marginTop="20dp"
        android:paddingRight="17dp"
        android:text="Email" />

</RelativeLayout>